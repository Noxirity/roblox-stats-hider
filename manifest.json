{
  "manifest_version": 3,
  "name": "Roblox Stats Hider",
  "version": "1.0",
  "description": "Hides statistics like player count on Roblox experiences.",
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*"],
      "js": ["robloxStatsHider.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_page": "options.html"
}
